{
    "env": {
        "browser": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "warn",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "off"
        ],
        "semi": [
            "warn",
            "never"
        ],
        "no-unused-vars": [
            "off"
        ],
        "comma-dangle": [
            "off"
        ],
        "no-undef": [
            "off"
        ],
        "no-console": [
            "off"
        ]
    }
}
